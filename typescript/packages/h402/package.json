        "default": "./dist/client/index.js"
      }
    },
    "./verify": {
      "import": {
        "types": "./dist/verify/index.d.ts",
        "import": "./dist/verify/index.js",
        "default": "./dist/verify/index.js"
      }
    },
    "./shared": {
      "import": {
        "types": "./dist/shared/index.d.ts",
        "import": "./dist/shared/index.js",
        "default": "./dist/shared/index.js"
      }
    }
  },
  "files": [
    "dist",
    "static"
  ],
  "devDependencies": {
    "@types/node": "^22.15.3",
    "zod": "^3.25.49"
